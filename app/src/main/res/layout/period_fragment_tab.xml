<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tab_category"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/tab_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#48CAE1"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tab_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일별"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#bbEAEAEA"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tab_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주별"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#bbEAEAEA"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tab_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월별"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pager_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_category"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


    </LinearLayout>

</LinearLayout>